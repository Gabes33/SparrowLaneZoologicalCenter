<!-- employee.hbs -->
<h1>Employees</h1>
<p>The table below describes the current employees at the zoo.</p>
{{!-- Create a table --}}
<table id="employee-table">

    {{!-- Header section --}}
    <thead>

        {{!-- For just the first row, we print each key of the row object as a header cell so we
        know what each column means when the page renders --}}
        <tr>
            {{#each data.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th>delete</th>
        </tr>
    </thead>

    {{!-- Body section --}}
    <tbody>

        {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
        {{#each data}}
        <tr data-value={{this.employeeID}}>
            <td>{{this.employeeID}}</td>
            <td>{{this.firstName}}</td>
            <td>{{this.lastName}}</td>
            <td>{{this.phoneNum}}</td>
            <td>{{this.hourlyWage}}</td>
            <td>{{this.workEmail}}</td>
            <td><button onclick="deleteEmployee({{this.employeeID}})">Delete</button></td>
        </tr>
        {{/each}}
    </tbody>
</table>
<script src="./js/delete_employee.js"></script>

<!-- /views/index.hbs -->

<h2>Search Employees</h2>
<p>Search by last name using the field below. Partial last names are OK too!</p>
<form id="search-employee-html" method='GET' action='/'>
    <label for="input-lname">Search by Last Name: </label>
    <input type="text" name="lastName" id="input-lastName-html-search">

    <input type="submit">
    <a href='/'><button>Reset</button></a>
</form>


{{!-- Form to add a record to the table --}}
<h2>Adding Employee</h2>
<p>To add a new employee, please enter their information below and click 'Submit'!</p>
<form id="add-employee-form-ajax">
    <label for="input-firstName">First Name: </label>
    <input type="text" name="input-firstName" id="input-firstName">

    <label for="input-lastName">Last Name: </label>
    <input type="text" name="input-lastName" id="input-lastName">

    <label for="input-phoneNum">Phone Number: </label>
    <input type="number" name="input-phoneNum" id="input-phoneNum">

    <label for="input-hourlyWage">Hourly Wage: </label>
    <input type="number" min="1" step=".01" name="input-hourlyWage" id="input-hourlyWage">

    <label for="input-workEmail">Work Email: </label>
    <input type="text" name="input-workEmail" id="input-workEmail">


    <input type="submit">
</form>

{{!-- Embed our javascript to handle the DOM manipulation and AJAX request --}}
<script src="./js/add_employee.js"></script>




<h2>Updating A User's Hourly Wage Form</h2>

<p>To update a specific user's Hourly Wage, select their name from the drop-down menu on the left and their desired hourly wage from the drop down menu on the right</p>
<form id="update-employee-form-ajax">

    <label for="input-fullname">Full name: </label>
    <select name="input-fullname" id="mySelect">
        <option value="test">Select an Employee</option>
        {{#each data}}
        <option value="{{this.EmployeeID}}">{{this.firstName}} {{this.lastName}}</option>
        {{/each}}
    </select>

    <label for="input-hourlyWage">Hourly Wage: </label>
    <select name="input-hourlyWage" id="input-hourlyWage-update">
        <input type="number" min="1" step=".01" name="input-hourlyWage" id="input-hourlyWage">
    </select>
    <td><button onclick="updateEmployee({{this.hourlyWage}})">Submit</button></td>

</form>

<script src="./js/update_employee.js"></script>